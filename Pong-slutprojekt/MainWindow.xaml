<Window x:Class="Pong_slutprojekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pong_slutprojekt"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="700">
    <Grid>
        <Canvas Background="Black" />
        <Image Source="/img/ball.png" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Image Source="/img/player.png" Height="100" HorizontalAlignment="left" Margin="30,0,0,0" VerticalAlignment="Center"/>
        <Image Source="/img/player.png" Height="100" HorizontalAlignment="right" Margin="0,0,30,0" VerticalAlignment="Center"/>
        <TextBlock FontSize="51" FontWeight="bold" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Center"
         Margin="0,60,0,0">----------------------------------</TextBlock>
        <Image Source="/img/white_lines.png" Height="70" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="180,0,0,0" >
            <Image.RenderTransform>
                <RotateTransform Angle="90"></RotateTransform>
            </Image.RenderTransform>
        </Image>
        
        
    </Grid>
</Window>
